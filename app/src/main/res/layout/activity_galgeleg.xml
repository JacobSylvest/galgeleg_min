<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B4A5A"
    tools:context=".Galgeleg">

    <EditText
        android:id="@+id/editText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Indtast bogstav"
        android:inputType="textPersonName"
        android:textColorHint="#63ADC4"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="244dp"
        android:background="#579CB3"
        android:text="SPIL IGEN"
        android:textColor="#163947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/endGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="40dp"
        android:background="#579CB3"
        android:text="SLUT SPIL"
        android:textColor="#163947"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/tryGuessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="36dp"
        android:background="#579CB3"
        android:text="GÆT"
        android:textColor="#163947"
        android:textColorHint="#163947"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/secretWord"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:hint="Hemmeligt ord"
        android:textColor="#63ADC4"
        android:textColorHint="#63ADC4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/guessFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="36dp"
        android:hint="Er dit bogstav korrekt?"
        android:textColor="#000000"
        android:textColorHint="#63ADC4"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/usedLetters"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="12dp"
        android:hint="Brugte ord"
        android:textColor="#63ADC4"
        android:textColorHint="#63ADC4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/wrongGuesses"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="220dp"
        android:hint="Forkert gæt"
        android:textColor="#63ADC4"
        android:textColorHint="#63ADC4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/gameOutcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="164dp"
        android:hint="gameOutcomeMsg"
        android:textColorHint="#63ADC4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="173dp"
        android:layout_height="212dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="132dp"
        android:background="#B3D0D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/galge" />

</androidx.constraintlayout.widget.ConstraintLayout>